package ex01.contral.For;

public class Ex04_for {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int a = 1;
		int x = 0;
		int y = 0;
		int z = 0;
		for (a = 1; a <= 100; a++) {
			if (a % 3 == 0) {
				x++;
				y += a;
			}
			z +=a;
		}
		System.out.println("ÇÕ°è" + y);
		System.out.println("°¹¼ö" + x);
		System.out.println("ÃÑÇÕ" + z);
	}

}
