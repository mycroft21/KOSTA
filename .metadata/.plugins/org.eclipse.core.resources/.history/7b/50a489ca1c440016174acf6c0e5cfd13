public class Ex01For {
	public static void main(String[] args) {

		int a, b = 2;

		for (a = 2; a <= 9; a++) {
			System.out.print(a + "단 \t\t");
		} // end for0
		System.out.println();
		for (a = 1; a <= 9; a++) {

			for (b = 2; b <= 9; b++) {
				System.out.print(b + " X " + a + " = " + (a * b) + "\t");
			} // end for2
			System.out.println("");
		} // end for1

		Scanner sc = new Scanner(System.in);
		int x = 0, y = 0, z = 0;
		boolean dan = true;
		while (dan) {
			System.out.println("구구단을 공부해봅시다.");
			System.out.println("외우고 싶은 단을 입력해 주세요!");
			x = sc.nextInt();
			System.out.println(x + "단 공부를 시작합니다! 외우고 싶은 숫자를 입력해 주세요!");
			y = sc.nextInt();

			System.out.println(x + " * " + y + " = " + x * y + " 다시 외우고 싶으면 1번 아니면 2번을 입력해 주세요");

			z = sc.nextInt();

			if (z == 2) {
				System.out.println("구구단을 정지합니다.");
				break;

			}

		}
	}// end main
}// end class